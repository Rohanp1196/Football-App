    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Ticket Confirmation</h4>
                </div>
                <div class="modal-body">
                    <div class="payment_confirm">
                        <span id="confirm_logo" class="fa fa-check-circle-o"></span>


                    </div>
                    <p>
                        <h1>Hi <span id="modal_name"></span></h1>Your ticket has been booked for the <span id="modal_match_info"></span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>



    <div class="modal fade" id="error_modal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="background-color:#f55659;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Invalid Input</h4>
                </div>
                <div class="modal-body">
                    <div class="payment_confirm">
                        <span id="confirm_logo" class="glyphicon glyphicon-remove-circle"></span>


                    </div>
                    <h4 id="error_display" class="error">
                    </h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>


    <script>
        function check(e) {
            e.preventDefault();


            var name = $("#name").val();
            var email = $("#email").val();
            var match_info = $("#match_info").val();
            var card_number = $("#card_number").val();
            var card_name = $("#card_name").val();
            var cvv = $("#cvv").val();

            var name_pattern = /^[A-za-z\s]*$/.test(name);
            // alert(name_pattern);
            var email_pattern = /^[A-Za-z0-9_\.-]+@[a-z]+\.[a-z]{2,}$/.test(email);
            // var email_pattern = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(email);
            var card_number_pattern = /^[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{4}$/.test(card_number);
            var card_name_pattern = /^[A-za-z\s]*$/.test(name);
            var cvv_pattern = /^[0-9]{3}$/.test(cvv);
            var error = "";

            if (!cvv_pattern) {
                error = "Enter a valid CVV. Desired pattern: 3 Digits";
            }

            if (!card_name_pattern) {
                error = "Enter a valid card name.Desired pattern: Enter only alphabets";
            }
            if (!card_number_pattern) {
                error = "Enter a valid Card Number. Desired Pattern: xxxx-xxxx-xxxx-xxxx";
            }
            if (!email_pattern) {
                error = "Enter a valid email address";
            }

            if (!name_pattern) {
                error = "Enter a valid name.Desired pattern: Enter only alphabets";
            }

            // alert(error);

            if (error == "") {

                document.getElementById("modal_name").innerHTML = document.getElementById("name").value;
                document.getElementById("modal_match_info").innerHTML = document.getElementById("match_info").value;
                $("#myModal").modal();

                document.getElementById("my_form").reset();


            } else {

                document.getElementById("error_display").innerHTML = error;
                $("#error_modal").modal();
            }





        }


