                    <form class="form-horizontal " id="my_form" onSubmit="JavaScript:check(event)">
                        <div class="form-group ">
                            <label class="control-label col-sm-4 " for="name ">Name:</label>
                            <div class="col-sm-8 ">
                                <input type="text " class="form-control " id="name" title="Enter alphabets only" placeholder="Enter name" required>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label class="control-label col-sm-4 " for="email ">Email:</label>
                            <div class="col-sm-8 ">
                                <input type="text" class="form-control" title="Please enter a valid email address" id="email" placeholder="Enter email" required>
                            </div>
                        </div>

                        <div class="form-group ">
                            <label class="control-label col-sm-4 " for="match_info ">Match Info:</label>
                            <div class="col-sm-8 ">
                                <select class="form-control " id="match_info" required>
                                            <option value="match 1">Match-1: Fc Barcelona vs Fc Bayern Munich</option>
                                            <option value="match 2">Match-2: Real Madrid vs Juventus</option>
                                            <option value="match 3">Match-3: Manchester City vs Liverpool</option>
                                            <option value="match 4">Match-4: Paris St Germain vs Arsenal</option>
                                          </select>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label class="control-label col-sm-4 " for="card_number">Card Number:</label>
                            <div class="col-sm-8 ">
                                <input type="text " class="form-control" id="card_number" title="Required format: xxxx-xxxx-xxxx-xxxx" placeholder="Card Number " required>
                            </div>
                        </div>


                        <div class="form-group ">
                            <label class="control-label col-sm-4 " for="card_name ">Name on card:</label>
                            <div class="col-sm-8 ">
                                <input type="text " class="form-control " id="card_name" title="Enter alphabets only" placeholder="Name on card " required>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label class="control-label col-sm-4 " for="cvv ">CVV:</label>
                            <div class="col-sm-8 ">
                                <input type="text " class="form-control " id="cvv" placeholder="CVV " title="3 digits only" required>
                            </div>
                        </div>

                        <div class="form-group ">
                            <div class="col-sm-offset-4 col-sm-8 ">
                                <button type="submit" class="btn btn-success full_width " id="modal_button">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
